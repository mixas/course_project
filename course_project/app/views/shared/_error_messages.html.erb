<% if object.errors.any? %>
  <div id="error_explanation">
    <h2 id="error_header"><%= pluralize(@user.errors.count, "error") %>
        prohibited this <%= object.class.to_s.underscore.humanize.downcase %> from being saved:</h2>
    <ul class="error-list">
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>