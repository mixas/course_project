<div class="block">
  <div id="form">
    <h1 id="form_title"><%= @title %></h1>
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', :object => f.object  %>
    <div class="field">
      <%= f.label :name, :class => "label" %>
      <%= f.text_field :name, :class => "text_field" %>
    </div>
    <div class="field">
      <%= f.label :surname %>
      <%= f.text_field :surname, :class => "text_field" %>
    </div>
    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email, :class => "text_field" %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, :class => "text_field" %>
    </div>
    <div class="field">
      <%= f.label :confirmation %>
      <%= f.password_field :password, :class => "text_field" %>
    </div>
    <div id="new_user_submit">
      <%= f.submit "Sign up" %>
    </div>
    <% end %>
  </div>
  <% content_for :sidebar, render(:partial => 'sidebar') -%>
</div>

